<div class="pt-4">
  <div class="sm:px-8 mt-9">
    <div class="mx-auto max-w-7xl lg:px-8">
      <div class="relative px-4 sm:px-8 lg:px-24">
        <div class="mx-auto max-w-2xl lg:max-w-5xl">
          <div class="mx-auto grid max-w-xl grid-cols-1 gap-y-20 lg:max-w-none lg:grid-cols-2">
            <div class="flex flex-col gap-16">
              <div>
                <h1 class="text-4xl font-bold tracking-tight text-gray-800 dark:text-zinc-100 sm:text-4xl mb-8">
                  Ouray Teacher Fund
                  <br/>
                  <small class="text-2xl">
                    <em>
                      <%= @page.title.titleize %>
                    </em>
                  </small>
                </h1>
                <div class="-mt-4 text-zinc-600 dark:text-zinc-400">
                  <%= @page.body %>
                </div>
              </div>
              <div>
                <h2 class="text-2xl font-bold tracking-tight text-gray-800 dark:text-zinc-100 sm:text-4xl mb-8">News</h2>
                <div class="-mt-4 text-zinc-600 dark:text-zinc-400">
                  <%= link_to "https://www.msn.com/en-us/news/us/nonprofit-helping-rural-teachers-further-their-education/ar-BB1mkBc1", class: "text-orange-800 dark:text-orange-300 hover:text-orange-300 dark:hover:text-orange-800", target: "_blank" do %>
                    <p class="mb-4">
                      <strong>Ouray Teacher Fund</strong> featured in MSN News. Click here to read more.
                    </p>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="space-y-10 lg:pl-16 xl:pl-24">
              <%= render partial: 'shared/donate_form' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-16 sm:mt-20">
    <%= render partial: 'shared/photo_collage' %>
  </div>
  <div class="sm:px-8.mt-18 md:mt-12">
    <div class="mx-auto max-w-7xl lg:px-8">
      <div class="relative px-4 sm:px-8 lg:px-24">
        <div class="mx-auto max-w-2xl lg:max-w-5xl">
          <div class="mx-auto grid max-w-xl grid-cols-1 gap-y-20 lg:max-w-none lg:grid-cols-2">
            <div class="flex flex-col gap-16">
              <%= render partial: 'shared/youtube_video' %>
            </div>
            <div class="space-y-10 lg:pl-16 xl:pl-24">
              <div id="joinForm">
                <%= render partial: 'shared/join_form', locals: { message: @message } %>
              </div>
              <% if @donations.any? %>
                <%= render partial: 'shared/recent_donations', locals: { donations: @donations } %>
              <% end %>
              <% if @awardees.any? %>
                <%= render partial: 'shared/recent_awardees', locals: { awardees: @awardees } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
