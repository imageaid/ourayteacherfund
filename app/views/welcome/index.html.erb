<div class="pt-4">
  <div class="sm:px-8 mt-9">
    <div class="mx-auto max-w-7xl lg:px-8">
      <div class="relative px-4 sm:px-8 lg:px-24">
        <div class="mx-auto max-w-2xl lg:max-w-5xl">
          <div class="mx-auto grid max-w-xl grid-cols-1 gap-y-20 lg:max-w-none lg:grid-cols-2">
            <div class="flex flex-col gap-16">
              <div>
                <h1 class="text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text-4xl mb-8">
                  Ouray Teacher Fund
                  <br/>
                  <small class="text-2xl">
                    <em>
                      <%= @page.title.titleize %>
                    </em>
                  </small>
                </h1>
                <div class="-mt-4 text-base text-zinc-600 dark:text-zinc-400">
                  <%= @page.body %>
                </div>
              </div>
            </div>
            <div class="space-y-10 lg:pl-16 xl:pl-24">
              <%= render partial: 'shared/donate_form' %>
              <div id="joinForm">
                <%= render partial: 'shared/join_form', locals: { message: @message } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-16 sm:mt-20">
    <%= render partial: 'shared/photo_collage' %>
  </div>
  <div class="sm:px-8.mt-18.md:mt-12">
    <div class="mx-auto max-w-7xl lg:px-8">
      <div class="relative px-4 sm:px-8 lg:px-24">
        <div class="mx-auto max-w-2xl lg:max-w-5xl">
          <div class="mx-auto grid max-w-xl grid-cols-1 gap-y-20 lg:max-w-none lg:grid-cols-2">
            <div class="flex flex-col gap-16">
              <%= render partial: 'shared/youtube_video' %>
            </div>
            <div class="space-y-10 lg:pl-16 xl:pl-24">
              <% if @donations.any? %>
                <%= render partial: 'shared/recent_donations', locals: { donations: @donations } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
