<%= form_with(model: grant_request, class: "contents") do |form| %>
  <%= form.hidden_field :grant_id, value: grant.id %>
  <% if grant_request.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3" id="error_explanation">
      <h2>
        <%= pluralize(grant_request.errors.count, "error") %>
        prohibited this grant_request from being saved:
      </h2>
      <ul>
        <% grant_request.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.fields_for :applicant, grant_request.applicant do |fields| %>
    <%= fields.hidden_field :role, value: "applicant" %>
    <%= fields.hidden_field :status, value: "pending" %>
    <%= fields.hidden_field :applied_on, value: Time.zone.now %>
    <div class="my-5">
      <%= fields.label :first_name %>
      <%= fields.text_field :first_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= fields.label :last_name %>
      <%= fields.text_field :last_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= fields.label :email %>
      <%= fields.text_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :school_year %>
    <%= form.select :school_year, SchoolYears.new.future_school_years, {}, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :amount_requested %>
    <%= form.number_field :amount_requested, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <% grant.questions.to_a.each do |question| %>
    <%= render partial: "grant_requests/question", locals: { question: question } %>
  <% end %>
  <div class="inline">
    <div class="flex flex-row">
      <%= form.submit 'Apply', class: "btn-primary mr-2" %>
      <%= link_to 'Back', grant_requests_path, class: "btn-default ml-4" %>
    </div>
  </div>
<% end %>
