<article class="text-gray-800 dark:text-white">
  <header class="flex flex-col">
    <h1 class="mt-6 text-4xl font-bold tracking-tight text-gray-800 dark:text-zinc-100 sm:text-5xl">
      <%= page.title %>
    </h1>
    <time class="order-first flex items-center text-base text-zinc-400 dark:text-zinc-500" datetime="<%= "#{page.updated_at.to_formatted_s(:long_ordinal)}" %>">
      <span class="h-4 rounded-full bg-zinc-200 dark:bg-zinc-500 w-0.5"></span>
      <span class="ml-3">
        <%= page.updated_at.to_formatted_s(:long_ordinal) %>
      </span>
    </time>
  </header>
  <div class="mt-8 prose dark:prose-invert">
    <div>
      <%= page.body %>
    </div>
  </div>
  <% if page.link_label.casecmp?('Donate') %>
    <div class="mt-8 prose dark:prose-invert">
      <div>
        <%= link_to 'Donate', external_donation_url, class: 'ml-2 rounded-lg py-3 px-5 bg-orange-600 text-white inline-block font-medium', target: '_blank' %>
      </div>
    </div>
  <% end %>
</article>
