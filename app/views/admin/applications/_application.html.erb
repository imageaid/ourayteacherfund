<div id="<%= dom_id application %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= application.user_id %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">School year:</strong>
    <%= application.school_year %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Amount requested:</strong>
    <%= application.amount_requested %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Purpose:</strong>
    <%= application.purpose %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Other purpose:</strong>
    <%= application.other_purpose %>
  </p>
  <% if action_name != "show" %>
    <%= link_to "Show this application", application, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this application', edit_application_path(application), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6"/>
  <% end %>
</div>
