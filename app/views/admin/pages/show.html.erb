<article>
  <header class="flex flex-col">
    <h1 class="mt-6 text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100.sm:text-5xl">
      <%= @page.title %>
    </h1>
    <time class="order-first flex items-center text-base text-zinc-400 dark:text-zinc-500" datetime="<%= "#{@page.updated_at.to_formatted_s(:long_ordinal)}" %>">
      <span class="h-4 rounded-full bg-zinc-200 dark:bg-zinc-500 w-0.5"></span>
      <span class="ml-3">
        <%= @page.updated_at.to_formatted_s(:long_ordinal) %>
      </span>
    </time>
  </header>
  <div class="mt-8 prose dark:prose-invert">
    <div>
      <%= @page.body %>
    </div>
  </div>
  <div class="flex">
    <%= link_to 'Edit', edit_admin_page_path(@page), class: "btn-primary" %>
    <%= button_to 'Destroy', admin_page_path(@page), method: :delete, class: "btn-danger" %>
    <%= link_to "Back", admin_pages_path, class: "btn-default" %>
  </div>
</article>
