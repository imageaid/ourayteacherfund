<tr id="<%= dom_id(applicant) %>">
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
    <%= applicant.name %>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= applicant.email %>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= applicant.applied_on.to_formatted_s(:standard) %>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= applicant.status.titleize %>
  </td>
  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
    <%= link_to admin_applicant_path(applicant), class: 'text-indigo-600 hover:text-indigo-900' do %>
      Show
    <% end %>
    <%= link_to edit_admin_applicant_path(applicant), class: 'text-indigo-600 hover:text-indigo-900' do %>
      Edit
    <% end %>
  </td>
</tr>
