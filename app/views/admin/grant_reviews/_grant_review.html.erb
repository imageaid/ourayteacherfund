<div id="<%= dom_id(review) %>" class="grid grid-cols-2 md:grid-cols-3 mt-8">
  <div class="col-span-1 md:col-span-2">
    <p class="mt-1 max-w-2xl text-sm leading-6 dark:text-white text-zinc-500">
      <strong><%= review.board_member_name %></strong>
    </p>
    <%= review.thoughts %>
    <p class="mt-1 max-w-2xl text-sm leading-6 dark:text-white text-zinc-500">
      <span class="text-sm text-zinc-500 dark:text-white">
        <%= review.created_at.strftime("%B %d, %Y") %>
      </span>
    </p>
  </div>
  <div class="col-span-1 pt-8">
    <div class="float-right">
      <%= button_to 'Destroy', admin_grant_review_path(review), method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this review?'}, class: 'btn-danger' %>
    </div>
  </div>
</div>