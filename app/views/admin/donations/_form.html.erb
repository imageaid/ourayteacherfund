<%= form_with(model: [:admin, donation], class: "contents") do |form| %>
  <%= form.hidden_field :donor_id, value: donor.id %>
  <%= form.hidden_field :user_id, value: donor.id %>
  <% if donation.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3" id="error_explanation">
      <h2>
        <%= pluralize(donation.errors.count, "error") %>
        prohibited this donation from being saved:
      </h2>
      <ul>
        <% donation.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="flex flex-col justify-items-start mb-8">
    <div class="mb-4 flex">
      <%= form.number_field :amount, class: 'shadow rounded-md border border-gray-200 outline-none', placeholder: 'Amount ($)' %>
    </div>
    <div class="flex">
      <%= form.date_field :received_on, class: "shadow rounded-md border border-gray-200 outline-none" %>
    </div>
    <div class="flex flex-row mt-4">
      <div class="flex mr-4">
        <%= form.label :recurring, class: 'mr-4 mt-2' %>
        <%= form.check_box :recurring, class: 'shadow rounded-md border border-gray-200 outline-none mt-3' %>
      </div>
      <div class="flex">
        <%= form.label :thanked, class: 'mr-4 mt-2' %>
        <%= form.check_box :thanked, class: 'shadow rounded-md border border-gray-200 outline-none mt-3' %>
      </div>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "btn-primary" %>
  </div>
<% end %>
