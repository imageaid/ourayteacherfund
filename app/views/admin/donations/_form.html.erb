<%= form_with(model: [:admin, donation], class: "contents") do |form| %>
  <% if donation.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3" id="error_explanation">
      <h2>
        <%= pluralize(donation.errors.count, "error") %>
        prohibited this donation from being saved:
      </h2>
      <ul>
        <% donation.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :amount %>
    <%= form.text_field :amount, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :recurring %>
    <%= form.check_box :recurring, class: "block mt-2 h-5 w-5" %>
  </div>
  <div class="my-5">
    <%= form.label :thanked %>
    <%= form.check_box :thanked, class: "block mt-2 h-5 w-5" %>
  </div>
  <div class="my-5">
    <%= form.label :donor_id %>
    <%= form.number_field :donor_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
