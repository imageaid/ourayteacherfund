<div id="<%= dom_id message %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Subject:</strong>
    <%= message.subject %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= message.status %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Sends at:</strong>
    <%= message.sends_at %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Message type:</strong>
    <%= message.message_type.humanize.titleize %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Deliver to:</strong>
    <%= message.deliver_to.join(", ") %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Total delivered:</strong>
    <%= message.total_delivered %>
  </p>
  <div class="flex flex-row">
    <%= link_to "Show", admin_message_path(message), class: "btn-primary mr-2" %>
    <%= link_to 'Edit', edit_admin_message_path(message), class: "btn-secondary mr-2" %>
    <%= button_to 'Schedule', schedule_admin_message_path(message), method: :post, class: "btn-danger mr-2" %>
    <%= link_to 'Back', admin_messages_path, class: "btn-default" %>
  </div>
</div>
