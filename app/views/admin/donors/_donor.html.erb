<tr id="<%= dom_id(donor) %>">
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-800  dark:text-white sm:pl-0">
    <%= donor.name.titleize %>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500  dark:text-white">
    <%= donor.email %>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500  dark:text-white">
    <%= "#{number_to_currency(donor.total_donated)}" %>
  </td>
  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
    <%= link_to admin_donor_path(donor), class: 'text-indigo-600 hover:text-indigo-900 mr-2' do %>
      Show
    <% end %>
    <%= link_to edit_admin_donor_path(donor), class: 'text-indigo-600 hover:text-indigo-900' do %>
      Edit
    <% end %>
  </td>
</tr>
