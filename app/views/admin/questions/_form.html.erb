<%= form_with(model: [:admin, question], class: "contents") do |form| %>
  <% if question.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3" id="error_explanation">
      <h2>
        <%= pluralize(question.errors.count, "error") %>
        prohibited this question from being saved:
      </h2>
      <ul>
        <% question.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :question %>
    <%= form.text_field :question, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :active %>
    <%= form.check_box :active, class: "shadow rounded-md border border-gray-200 outline-none ml-2" %>
  </div>
  <div class="my-5">
    <%= form.label :position %>
    <%= form.number_field :position, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-1/4" %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
